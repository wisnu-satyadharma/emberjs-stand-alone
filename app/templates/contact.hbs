<h1>Contact Page</h1>

<div class="row">
	<div class="form-group">
	  <label for="usr">Email:</label>
    {{input type="email" value=email class="form-control" placeholder="Please type your e-mail address."}}

	</div>
	<div class="form-group">
	  <label for="pwd">Message:</label>
    {{textarea class="form-control" placeholder="Your message. (At least 5 characters.)" rows="7" value=message}}
	</div>

	<div class="form-group">
    <button class="btn btn-primary btn-lg btn-block" disabled={{unless isValidButton 'disabled' }} {{action 'sendMessage'}} >Send Message</button>	  
	</div>
  {{#if responseMessage}}
    <div class="alert alert-success">{{responseMessage}}</div>
  {{/if}}
	

</div>
